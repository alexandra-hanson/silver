#!/bin/bash

set -eu

# Check that the eclipse-plugin directory exists
if [ ! -d eclipse-plugin ]; then
	echo "Make sure you're in the silver directory!" >&2;
	exit -1;
fi

cd eclipse-plugin
./build

TARGET=$(pwd)/updatesite/target/repository

echo "..."
echo "..."
echo "..."
echo "Be sure to increment IDE version number in:"
echo " - feature/feature.xml"
echo " - feature/pom.xml"
echo " - plugin/META-INF/MANIFEST.MF"
echo " - plugin/pom.xml"
echo " - pom.xml"
echo " - updatesite/category.xml"
echo " - updatesite/pom.xml"
echo "..."
echo "..."
echo "Reminder: add $TARGET as path to find update site in eclipse, if using directly"
echo "..."
